<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="720" Height="480"
        x:Class="OpenH2.Launcher.MainWindow"
        Title="OpenH2.Launcher">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="25" />
      <RowDefinition Height="*"/>
      <RowDefinition Height="25"/>
    </Grid.RowDefinitions>

    <Menu Grid.Row="0" Padding="3" Name="mainMenu" Background="DarkSlateGray">
      <MenuItem Header="File">
        <MenuItem Header="Quick Load Map..." Command="{Binding QuickLoadMap}"></MenuItem>
        <MenuItem Header="Choose Map Folder" Command="{Binding ChooseMapFolder}"></MenuItem>
        <Separator />
        <MenuItem Header="Exit" Command="{Binding Exit}"></MenuItem>
      </MenuItem>
    </Menu>

    <TabControl Grid.Row="1">
      <TabItem Header="Maps" FontSize="14">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <!-- Quick Load Button - prominent at top -->
          <Button Grid.Row="0" Content="Quick Load Map..."
                  Command="{Binding QuickLoadMap}"
                  HorizontalAlignment="Center"
                  Margin="10"
                  Padding="20,10"
                  FontSize="16"
                  FontWeight="Bold" />

          <!-- Existing map list -->
          <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ListBox Items="{Binding AvailableMaps}" SelectedItem="{Binding SelectedMap}" Width="300" Height="300">
              <ListBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding FriendlyName}" />
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Vertical" Margin="10">
              <Button Content="Launch Selected" Command="{Binding Launch}" Padding="10,5" />
            </StackPanel>
          </StackPanel>
        </Grid>


      </TabItem>

      <TabItem Header="Settings" FontSize="14">
        <ScrollViewer>
          <StackPanel Margin="10">
            <TextBlock Text="Ancillary Map Paths" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBlock Text="Configure paths to required map files. Leave empty to use the main map folder."
                       TextWrapping="Wrap" Margin="0,0,0,15" Foreground="Gray" />

            <!-- shared.map -->
            <TextBlock Text="shared.map (Multiplayer)" FontWeight="SemiBold" Margin="0,5,0,3" />
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBox Grid.Column="0" Text="{Binding SharedMapPath}" Watermark="(uses map folder)" />
              <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseSharedMap}" Margin="5,0,0,0" Padding="10,5" />
              <Button Grid.Column="2" Content="Clear" Command="{Binding ClearSharedMap}" Margin="5,0,0,0" Padding="10,5" />
            </Grid>

            <!-- mainmenu.map -->
            <TextBlock Text="mainmenu.map" FontWeight="SemiBold" Margin="0,15,0,3" />
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBox Grid.Column="0" Text="{Binding MainMenuMapPath}" Watermark="(uses map folder)" />
              <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseMainMenuMap}" Margin="5,0,0,0" Padding="10,5" />
              <Button Grid.Column="2" Content="Clear" Command="{Binding ClearMainMenuMap}" Margin="5,0,0,0" Padding="10,5" />
            </Grid>

            <!-- single_player_shared.map -->
            <TextBlock Text="single_player_shared.map (Campaign)" FontWeight="SemiBold" Margin="0,15,0,3" />
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBox Grid.Column="0" Text="{Binding SinglePlayerSharedMapPath}" Watermark="(uses map folder)" />
              <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseSinglePlayerSharedMap}" Margin="5,0,0,0" Padding="10,5" />
              <Button Grid.Column="2" Content="Clear" Command="{Binding ClearSinglePlayerSharedMap}" Margin="5,0,0,0" Padding="10,5" />
            </Grid>

            <TextBlock Text="Note: Xbox maps require Xbox versions of these files."
                       TextWrapping="Wrap" Margin="0,20,0,0" Foreground="Orange" FontStyle="Italic" />
          </StackPanel>
        </ScrollViewer>
      </TabItem>

      <TabItem Header="Logs" FontSize="14">
        <TextBlock Text="TODO" />
      </TabItem>
    </TabControl>

    <StackPanel Grid.Row="2" Orientation="Horizontal">
      <TextBlock Text="Connected Process:" Margin="3" />
      <TextBlock Text="{Binding Path=Connection.ProcessId}" Margin="3" />
    </StackPanel>
  </Grid>
</Window>
